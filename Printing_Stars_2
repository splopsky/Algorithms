#include <iostream>
using namespace std;

int main() {

  int n;
  int temp = 0;
  cin >> n;

  for(int i = 0; i < n; i++){
  for(int i = 1; i < n - temp; i++)
    {
      cout << " ";
    }
  
  for(int i = 0; i <= temp; i++)
    {
      cout << "*";
    }
    cout << endl;
    temp++;
  }

  return 0;

}
